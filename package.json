{
  "name": "open-cli",
  "version": "0.1.0",
  "description": "OPEN-CLI - 오프라인 기업 환경을 위한 완전한 로컬 LLM CLI 플랫폼",
  "main": "dist/index.js",
  "bin": {
    "open": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"Tests will be added\" && exit 0"
  },
  "keywords": [
    "cli",
    "ai",
    "llm",
    "openai",
    "offline",
    "enterprise",
    "coding-assistant"
  ],
  "author": "OPEN-CLI Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
